<div class="row">

    <!-- Blog Entries Column -->
    <div class="col-md-8">

        <h1 class="my-4">BLOG POST
            {{! <small>Secondary Text</small> }}
        </h1>

        <!-- Blog Post -->
        {{#each posts}}
            <div class="card mb-4">
                <img
                    class="card-img-top"
                    {{#if file}}
                        src="/uploads/{{file}}"
                    {{/if}}
                    alt="Card image cap"
                />
                <div class="card-body">
                    <h2 class="card-title">{{title}}</h2>
                    <p class="card-text">{{body}}</p>
                    <a href="/post/{{id}}" class="btn btn-primary">Read More &rarr;</a>
                </div>
                <div class="card-footer text-muted">
                    Posted on {{generateTime date 'MMMM Do YYYY'}} by
                    <a href="#">Start Bootstrap</a>
                </div>
            </div>
        {{/each}}


        <!-- Pagination -->
        <ul class="pagination justify-content-center mb-4">
            {{#paginate current=current pages=pages}}{{/paginate}}
            {{!-- <li class="page-item">
                <a class="page-link" href="#">&larr; Older</a>
            </li>
            <li class="page-item disabled">
                <a class="page-link" href="#">Newer &rarr;</a>
            </li> --}}
        </ul>

    </div>

    <!-- Sidebar Widgets Column -->
    <div class="col-md-4">

        <!-- Search Widget -->
        <div class="card my-4">
            <h5 class="card-header">Search</h5>
            <div class="card-body">
                <div class="input-group">
                    <input
                        type="text"
                        class="form-control"
                        placeholder="Search for..."
                    />
                    <span class="input-group-btn">
                        <button
                            class="btn btn-secondary"
                            type="button"
                        >Go!</button>
                    </span>
                </div>
            </div>
        </div>

        <!-- Categories Widget -->
        {{> home/cat-bar}}

        <!-- Side Widget -->
        <div class="card my-4">
            <h5 class="card-header">Side Widget</h5>
            <div class="card-body">
                You can put anything you want inside of these side widgets. They
                are easy to use, and feature the new Bootstrap 4 card
                containers!
            </div>
        </div>

    </div>

</div>